def hapap(c,d,e):
    if e == "+":
        hap(c,d)
    elif e == "-":
        bag(c,d)

def hap(a, b):
    result = a+b
    print('두수의 합을  구해출혁해 주는 함수입니다.')
    print(f'{a} {b}의 합은 {result}입니다.')

def bag(a, b):
    result = a-b
    print('두수의 합을  구해출혁해 주는 함수입니다.')
    print(f'{a} {b}의 합은 {result}입니다.')

hapap(10, 20,"+")
hapap(-87,172,"-")
